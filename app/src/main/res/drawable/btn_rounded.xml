<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <stroke
        android:width="1dp"
        android:color="@color/colorAccent"></stroke>

    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"></padding>

    <corners android:radius="30dp"></corners>
    <gradient
        android:type="linear"
        android:startColor="#289fef"
        android:endColor="#30cafc"
        android:angle="0"/>
</shape>
