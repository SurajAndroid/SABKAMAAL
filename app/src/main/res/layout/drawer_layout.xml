<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/gradient_bg"
                android:padding="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                />


            <TextView
                android:id="@+id/homeTxt"
                android:padding="10sp"
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textStyle="normal"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/medeum_text"
                android:layout_gravity="center">
            </TextView>


            <TextView
                android:id="@+id/rateUsTxt"
                android:padding="10sp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate Us"
                android:textStyle="normal"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/medeum_text"
                android:layout_gravity="center">
            </TextView>

            <TextView
                android:id="@+id/orderHistoryTxt"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order History"
                android:textStyle="normal"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/medeum_text"
                android:layout_gravity="center">
            </TextView>


            <TextView
                android:visibility="gone"
                android:id="@+id/offerTxt"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Offers"
                android:textStyle="normal"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/medeum_text"
                android:layout_gravity="center">
            </TextView>

            <TextView
                android:visibility="gone"
                android:id="@+id/rewardTxt"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rewards points"
                android:textStyle="normal"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/medeum_text"
                android:layout_gravity="center">
            </TextView>

            <TextView
                android:id="@+id/termsTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Condition"
                android:textStyle="normal"
                android:padding="10sp"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/medeum_text"
                android:layout_gravity="center">
            </TextView>

            <TextView
                android:id="@+id/logoutTxt"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textStyle="normal"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/medeum_text"
                android:layout_gravity="center">
            </TextView>





        </LinearLayout>
    </ScrollView>


 </LinearLayout>